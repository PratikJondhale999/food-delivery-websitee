<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Items</title>
    <link rel="stylesheet" href="/filtercat.css">
</head>
<body>
    <div class="search-bar">
        <form action="/filtercat/filter" method="get">
            <input type="text" name="category" placeholder="Category...">
            <input type="number" name="minPrice" placeholder="Min Price...">
            <input type="number" name="maxPrice" placeholder="Max Price...">
            <button type="submit">Search</button>
        </form>
    

   
        <div id="food-items-list">
            <% allfood.forEach((key) => { %>
            <div class="food-item">
                <img src="<%= key.imgBuffer %>" alt="Food Image">
                <h3><%= key.Description %></h3>
                <p>Pizza, Italian, Pasta, Desserts</p>
                <div class="rating">
                    <span>★★★★☆</span>
                </div>
                <p class="price" data-price="<%= key.price %>">₹<%= key.price %></p>
                <form action="/cart/AddToCart" method="post">
                    <input type="hidden" name="productId" value="<%= key._id %>">
                    <input type="hidden" name="productName" value="<%= key.Description %>">
                    <input type="hidden" name="price" value="<%= key.price %>">
                    <button type="submit">Add to Cart</button>
                </form>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
